	                                    onclick="DeployActionInModalPanel('@Comunidad.Url/@Html.GetText("URLSEM", "POLITICACOOKIES")/load-modal', this, 'modal-dinamic-content', '');"	                                    
	                                    data-toggle="modal"
	                                    data-target="#modal-container"
                                    >	                                    
	                                    @Html.GetText("FOOTER", "POLITICACOOKIES")
                                    </a>
                                }
