    MontarContextoMensajes('@IdentidadActual.KeyUser', '@IdentidadActual.KeyIdentity', '@Model.Key', '@Html.GetUtilIdiomas().LanguageCode', '', 'divContexto');
    @Html.Raw(Html.GetJSExtra());
